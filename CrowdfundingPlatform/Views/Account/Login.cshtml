@model CrowdfundingPlatform.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group w-50">
        <label asp-for="Email"></label><br />
        <input class="form-control" asp-for="Email" required />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group w-50">
        <label asp-for="Password"></label><br />
        <input class="form-control" asp-for="Password" required />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input asp-for="RememberMe">
        <label asp-for="RememberMe" class="text-dark" required>
        </label>
    </div>
    <div>
        <input class="btn btn-outline-info" type="submit" value="Login" />
    </div>
</form>